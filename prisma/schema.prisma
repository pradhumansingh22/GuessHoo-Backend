generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model game {
  id   String @unique @id @default(uuid())
  createdAt DateTime
  player1Image String?
  player2Image String?
}

model image {
  id String @unique @id @default(uuid())
  imageUrl String @unique
  imageName String
  pool imagePool @relation(fields: [poolId], references: [id])
  poolId String
}

model imagePool {
    id String @unique @id @default(uuid())
    poolName String @unique
    images image[]
}
